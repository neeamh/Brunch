<%- include("partials/header.ejs") %>

<html>
<body class="posts">
  <div class="container">
    <h1 class="title row">Posts</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% allPages.forEach(post => { %>
        <div class="col">
          <a href="/posts/<%= post.id %>" class="text-decoration-none">
            <div class="card shadow-sm h-100">
              <% if (post.img) { %>
                <img class="card-image img-fluid rounded-top" src="data:<%= post.img_mime_type %>;base64,<%= post.img %>" alt="...">
              <% } %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-truncate"><%= post.title %></h5>
                <p class="card-text text-truncate"><%= post.body %></p>
                <div class="mt-auto">
                  <p class="card-text">
                    <small class="card-time text-body-secondary"><%= post.updatedat %></small>
                  </p>
                  <div class="d-flex align-items-center mt-2">
                    <% if (post.profile_pic) { %>
                      <img src="data:<%= post.profile_pic_mime_type %>;base64,<%= post.profile_pic %>" alt="Profile Picture" class="rounded-circle" style="width: 30px; height: 30px; margin-right: 10px;">
                    <% } %>
                    <span><%= post.username %></span>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
  <%- include("partials/boot_script_cdn.ejs") %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>
</html>
<%- include("partials/footer.ejs") %>
